<project
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>io.opentracing.contrib.specialagent.test</groupId>
    <artifactId>test</artifactId>
    <version>1.7.0-SNAPSHOT</version>
  </parent>
  <groupId>io.opentracing.contrib.specialagent.test.spymemcached</groupId>
  <artifactId>spymemcached</artifactId>
  <packaging>pom</packaging>
  <name>SpecialAgent Tests for Spymemcached</name>
  <modules>
    <module>spymemcached-2.11.0</module>
    <module>spymemcached-2.12.3</module>
  </modules>
  <profiles>
    <profile>
      <id>mac</id>
      <activation>
        <os>
          <family>mac</family>
        </os>
        <file>
          <missing>.pom-packaging-marker</missing>
        </file>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>install</id>
                <goals>
                  <goal>exec</goal>
                </goals>
                <phase>generate-resources</phase>
                <configuration>
                  <executable>sh</executable>
                  <arguments>
                    <argument>-c</argument>
                    <argument>brew list memcached || brew install memcached</argument>
                  </arguments>
                </configuration>
              </execution>
              <execution>
                <id>start</id>
                <goals>
                  <goal>exec</goal>
                </goals>
                <phase>generate-resources</phase>
                <configuration>
                  <executable>sh</executable>
                  <arguments>
                    <argument>-c</argument>
                    <argument>brew services restart memcached</argument>
                  </arguments>
                </configuration>
              </execution>
              <execution>
                <id>stop</id>
                <goals>
                  <goal>exec</goal>
                </goals>
                <phase>post-integration-test</phase>
                <configuration>
                  <executable>sh</executable>
                  <arguments>
                    <argument>-c</argument>
                    <argument>brew services stop memcached</argument>
                  </arguments>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>